<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">

    <changeSet id="9003-1" author="fineract">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="m_extend_eir_calculation"/>
            </not>
        </preConditions>
        <createTable tableName="m_extend_eir_calculation">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="loan_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="calculation_date" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="effective_interest_rate" type="DECIMAL(19,6)">
                <constraints nullable="false"/>
            </column>
            <column name="principal_amount" type="DECIMAL(19,6)">
                <constraints nullable="false"/>
            </column>
            <column name="interest_rate_differential" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_charges_fees_insurance" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="processing_fees" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="gst_amount" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="other_charges" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="total_repayment_amount" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="loan_tenure_months" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="net_disbursement_amount" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="charges_due_at_disbursement" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="emi_amount" type="DECIMAL(19,6)">
                <constraints nullable="true"/>
            </column>
            <column name="tenure_in_months" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="number_of_installments" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="currency_code" type="VARCHAR(3)">
                <constraints nullable="true"/>
            </column>
            <column name="formula_used" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="calculation_method" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="rbi_guidelines_version" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="is_compliant" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="compliance_notes" type="TEXT">
                <constraints nullable="true"/>
            </column>
            <column name="created_by" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="created_on_utc" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="false"/>
            </column>
            <column name="last_modified_by" type="BIGINT">
                <constraints nullable="true"/>
            </column>
            <column name="last_modified_on_utc" type="TIMESTAMP WITH TIME ZONE">
                <constraints nullable="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="9003-2" author="fineract">
        <addForeignKeyConstraint
            baseTableName="m_extend_eir_calculation"
            baseColumnNames="loan_id"
            referencedTableName="m_loan"
            referencedColumnNames="id"
            constraintName="FK_m_extend_eir_calculation_m_loan"
            onDelete="CASCADE"/>

        <addForeignKeyConstraint
            baseTableName="m_extend_eir_calculation"
            baseColumnNames="created_by"
            referencedTableName="m_appuser"
            referencedColumnNames="id"
            constraintName="FK_m_extend_eir_calculation_created_by"/>

        <addForeignKeyConstraint
            baseTableName="m_extend_eir_calculation"
            baseColumnNames="last_modified_by"
            referencedTableName="m_appuser"
            referencedColumnNames="id"
            constraintName="FK_m_extend_eir_calculation_last_modified_by"/>
    </changeSet>

    <changeSet id="9003-3" author="fineract">
        <createIndex tableName="m_extend_eir_calculation" indexName="idx_extend_eir_loan_id">
            <column name="loan_id"/>
        </createIndex>

        <createIndex tableName="m_extend_eir_calculation" indexName="idx_extend_eir_calculation_date">
            <column name="calculation_date"/>
        </createIndex>

        <createIndex tableName="m_extend_eir_calculation" indexName="idx_extend_eir_loan_calc_date">
            <column name="loan_id"/>
            <column name="calculation_date"/>
        </createIndex>
    </changeSet>

    <changeSet id="9003-4" author="fineract">
        <insert tableName="m_permission">
            <column name="grouping" value="Custom"/>
            <column name="code" value="READ_EIR_CALCULATION"/>
            <column name="entity_name" value="EIR_CALCULATION"/>
            <column name="action_name" value="READ"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="Custom"/>
            <column name="code" value="CREATE_EIR_CALCULATION"/>
            <column name="entity_name" value="EIR_CALCULATION"/>
            <column name="action_name" value="CREATE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="Custom"/>
            <column name="code" value="UPDATE_EIR_CALCULATION"/>
            <column name="entity_name" value="EIR_CALCULATION"/>
            <column name="action_name" value="UPDATE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
        <insert tableName="m_permission">
            <column name="grouping" value="Custom"/>
            <column name="code" value="DELETE_EIR_CALCULATION"/>
            <column name="entity_name" value="EIR_CALCULATION"/>
            <column name="action_name" value="DELETE"/>
            <column name="can_maker_checker" valueBoolean="false"/>
        </insert>
    </changeSet>

</databaseChangeLog>
